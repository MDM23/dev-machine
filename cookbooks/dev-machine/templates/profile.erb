# if running bash
if [ -n "$BASH_VERSION" ]; then
    # include .bashrc if it exists
    if [ -f "$HOME/.bashrc" ]; then
	. "$HOME/.bashrc"
    fi
fi

# set GOPATH
export GOPATH="$HOME"

# set PATH so it includes user's private bin directories
export PATH="$HOME/bin:$HOME/.local/bin:$HOME/.config/composer/vendor/bin:$GOPATH/bin:$PATH"

export CDPATH="$GOPATH/src/gitlab.azide.de:$GOPATH/src/gitlab.aspiria.de:$GOPATH/src/github.com/MDM23:$GOPATH/src"

